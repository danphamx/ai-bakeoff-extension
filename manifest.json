{
  "manifest_version": 3,
  "name": "My Great AI Bake-Off",
  "version": "2.6",
  "description": "Control multiple AI tabs with advanced blast & sync tools.",
  "permissions": ["sidePanel", "tabs", "scripting", "activeTab", "storage", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "cupcake.png",
    "48": "cupcake.png",
    "128": "cupcake.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html",
    "default_title": "AI Bakeoff üßÅ"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["bakeoff-icon.png", "chrome-open-split-view.webp","favicon.ico"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "_execute_side_panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+B"
      },
      "description": "Open Bakeoff Panel"
    }
  }
}